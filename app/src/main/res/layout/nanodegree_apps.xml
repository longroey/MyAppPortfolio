<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.udacity.longroey.myappportfolio.NanodegreeApps">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="My Nanodeger Apps!"
        android:textSize="22sp" />

    <Button
        android:id="@+id/popular_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="POPULAR MOVIES"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/stock_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="STOCK HAWK"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/build_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="BUILD IT BIGGER"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/make_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="MAKE YOUR APP MATERIAL"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/go_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="GO UBIQUITOUS"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <Button
        android:id="@+id/capstone_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#2f3d49"
        android:text="CAPSTONE"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>
